{% if resource_granted('oro_comment_view') %}
    {% import 'OroUIBundle::macros.html.twig' as UI %}

    {% set widgetContent %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'url': path('oro_comment_widget_comments', {
                entityClass: oro_class_name(entity, true),
                entityId: entity.id
            }),
            'title': 'oro.comment.entity_plural_label'|trans,
            'cssClass': 'list-widget comments-widget',
        }) }}
    {% endset %}
    {{ UI.scrollSubblock(null, [widgetContent]) }}
{% endif %}
